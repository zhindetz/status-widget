<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_background"
    android:orientation="vertical">

    <!-- Header -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/optionsMargin"
        android:background="?attr/header_background"
        android:gravity="start"
        android:paddingHorizontal="@dimen/optionsPaddingHorizontal"
        android:paddingVertical="@dimen/optionsPaddingVertical"
        android:text="@string/app_name"
        android:textColor="?attr/text_primary"
        android:textSize="@dimen/optionsTextSizeHeader"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:scrollbarSize="@dimen/optionsScrollbarSize"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/main_background"
            android:orientation="vertical"
            android:padding="@dimen/optionsMargin">

            <!-- Widget Configuration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/optionsMarginMedium"
                android:background="?attr/card_background"
                android:elevation="@dimen/optionsElevation"
                android:orientation="vertical"
                android:padding="@dimen/optionsMargin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/optionsMarginSmall"
                    android:text="@string/widget_title"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeBlock"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/enableWidgetSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/optionsMarginSmall"
                    android:text="@string/enable_widget"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel"
                    android:minHeight="@dimen/optionsLineHeight" />

                <!-- Icon style -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/icon_style"
                        android:textColor="?attr/text_primary"
                        android:textSize="@dimen/optionsTextSizeLabel"
                        android:minHeight="@dimen/optionsLineHeight" />
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/iconStyleSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/text_primary"
                        android:minHeight="@dimen/optionsLineHeight" />
                </LinearLayout>

                <!-- Night Mode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/night_mode"
                        android:textColor="?attr/text_primary"
                        android:textSize="@dimen/optionsTextSizeLabel"
                        android:minHeight="@dimen/optionsLineHeight" />
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/themeSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/text_primary"
                        android:minHeight="@dimen/optionsLineHeight" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/showTimeSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/optionsMarginSmall"
                    android:text="@string/show_time"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel"
                    android:minHeight="@dimen/optionsLineHeight" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/showDateSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/optionsMarginSmall"
                    android:text="@string/show_date"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel"
                    android:minHeight="@dimen/optionsLineHeight" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/showDaySwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/optionsMarginSmall"
                    android:text="@string/show_day_of_the_week"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel"
                    android:minHeight="@dimen/optionsLineHeight" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/showFullDayAndMonthSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/optionsMarginSmall"
                    android:text="@string/show_full_day_and_month"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel"
                    android:minHeight="@dimen/optionsLineHeight" />

                <!-- Calendar Alignment -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/calendar_alignment"
                        android:textColor="?attr/text_primary"
                        android:textSize="@dimen/optionsTextSizeLabel"
                        android:minHeight="@dimen/optionsLineHeight" />
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/calendarAlignmentSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/text_primary"
                        android:minHeight="@dimen/optionsLineHeight" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/showWiFiSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/optionsMarginSmall"
                    android:text="@string/show_wifi"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel"
                    android:minHeight="@dimen/optionsLineHeight" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/showGnssSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/optionsMarginSmall"
                    android:text="@string/show_gnss"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel"
                    android:minHeight="@dimen/optionsLineHeight" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/oneLineLayoutSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/optionsMarginSmall"
                    android:layout_marginBottom="@dimen/optionsMarginBig"
                    android:text="@string/one_line_layout"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel"
                    android:minHeight="@dimen/optionsLineHeight" />

                <!-- Time Font Size -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/time_font_size"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/timeFontSizeSeekBar"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/optionsMarginSmall"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:max="500"
                        android:min="10"
                        android:progress="50"
                        android:minHeight="@dimen/optionsLineHeight" />

                    <TextView
                        android:id="@+id/timeFontSizeValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/size_value_format"
                        android:textColor="?attr/text_primary"
                        android:textSize="@dimen/optionsTextSizeLabel" />
                </LinearLayout>

                <!-- Date Font Size -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date_font_size"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/dateFontSizeSeekBar"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/optionsMarginSmall"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:max="500"
                        android:min="10"
                        android:progress="50"
                        android:minHeight="@dimen/optionsLineHeight" />

                    <TextView
                        android:id="@+id/dateFontSizeValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/size_value_format"
                        android:textColor="?attr/text_primary"
                        android:textSize="@dimen/optionsTextSizeLabel" />
                </LinearLayout>

                <!-- Icon Sizes -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/optionsMarginBig"
                    android:text="@string/icon_size"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel"
                    android:minHeight="@dimen/optionsLineHeight" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/iconSizeSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/optionsMarginSmall"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:max="600"
                        android:min="10"
                        android:progress="50"
                        android:minHeight="@dimen/optionsLineHeight" />

                    <TextView
                        android:id="@+id/iconSizeValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/size_value_format"
                        android:textColor="?attr/text_primary"
                        android:textSize="@dimen/optionsTextSizeLabel" />
                </LinearLayout>

                <!-- Spacing Between Text and Icons -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/spacing_between_text_and_icons_size"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/spacingBetweenTextsAndIconsSeekBar"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/optionsMarginSmall"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:max="150"
                        android:min="0"
                        android:progress="50"
                        android:minHeight="@dimen/optionsLineHeight" />

                    <TextView
                        android:id="@+id/spacingBetweenTextsAndIconsValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/size_value_format"
                        android:textColor="?attr/text_primary"
                        android:textSize="@dimen/optionsTextSizeLabel" />
                </LinearLayout>

                <!-- Text outline transparency -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_outline_transparency"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/textOutlineAlphaSeekBar"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/optionsMarginSmall"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:max="255"
                        android:min="0"
                        android:progress="0xAA"
                        android:minHeight="@dimen/optionsLineHeight" />

                    <TextView
                        android:id="@+id/textOutlineAlphaValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/color_component_value_format"
                        android:textColor="?attr/text_primary"
                        android:textSize="@dimen/optionsTextSizeLabel" />
                </LinearLayout>

                <!-- Background transparency -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/background_transparency"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/backgroundAlphaSeekBar"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/optionsMarginSmall"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:max="255"
                        android:min="0"
                        android:progress="0xAA"
                        android:minHeight="@dimen/optionsLineHeight" />

                    <TextView
                        android:id="@+id/backgroundAlphaValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/color_component_value_format"
                        android:textColor="?attr/text_primary"
                        android:textSize="@dimen/optionsTextSizeLabel" />
                </LinearLayout>

                <!-- Adjust Time Y -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/adjust_time_y"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/adjustTimeYSeekBar"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/optionsMarginSmall"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:max="100"
                        android:min="-100"
                        android:progress="0"
                        android:minHeight="@dimen/optionsLineHeight" />

                    <TextView
                        android:id="@+id/adjustTimeYValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/size_value_format"
                        android:textColor="?attr/text_primary"
                        android:textSize="@dimen/optionsTextSizeLabel" />
                </LinearLayout>

                <!-- Adjust Date Y -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/adjust_date_y"
                    android:textColor="?attr/text_primary"
                    android:textSize="@dimen/optionsTextSizeLabel" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/adjustDateYSeekBar"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/optionsMarginSmall"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:max="100"
                        android:min="-100"
                        android:progress="0"
                        android:minHeight="@dimen/optionsLineHeight" />

                    <TextView
                        android:id="@+id/adjustDateYValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/size_value_format"
                        android:textColor="?attr/text_primary"
                        android:textSize="@dimen/optionsTextSizeLabel" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Copyright notice -->
    <TextView
        android:id="@+id/copyrightNoticeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?attr/card_background"
        android:gravity="center"
        android:linksClickable="true"
        android:padding="@dimen/optionsMarginSmall"
        android:text="@string/copyright_notice"
        android:textColor="?attr/text_secondary"
        android:textSize="@dimen/optionsTextSizeFooter" />
</LinearLayout>