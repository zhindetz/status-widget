<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Цвета для СВЕТЛОЙ темы -->
    <style name="AppTheme_Day" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="ic_launcher_background">@color/ic_launcher_background</item>

        <item name="widget_background">@color/widget_background_light</item>
        <item name="main_background">@color/background_light</item>
        <item name="card_background">@color/card_background_light</item>
        <item name="header_background">@color/header_background_light</item>
        <item name="text_primary">@color/text_primary_light</item>
        <item name="text_secondary">@color/text_secondary_light</item>
        <item name="text_outline">@color/text_outline_light</item>
    </style>
    <!-- Цвета для ТЕМНОЙ темы -->
    <style name="AppTheme_Night" parent="Theme.AppCompat.NoActionBar">
        <item name="ic_launcher_background">@color/ic_launcher_background</item>

        <item name="widget_background">@color/widget_background_dark</item>
        <item name="main_background">@color/background_dark</item>
        <item name="card_background">@color/card_background_dark</item>
        <item name="header_background">@color/header_background_dark</item>
        <item name="text_primary">@color/text_primary_dark</item>
        <item name="text_secondary">@color/text_secondary_dark</item>
        <item name="text_outline">@color/text_outline_dark</item>
    </style>
</resources>